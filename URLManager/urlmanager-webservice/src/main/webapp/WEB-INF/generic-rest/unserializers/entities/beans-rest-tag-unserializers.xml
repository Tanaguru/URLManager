<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd
       "
>
    
    <import resource="../beans-rest-generic-unserializers.xml"/>

    <bean
        id="tagXMLPostUnserializer"
        parent="genericXMLPostUnserializer"
    >
        <property name="targetClass">
            <value type="java.lang.Class">org.opens.urlmanager.entity.tag.TagImpl</value>
        </property>
    </bean>

    <bean
        id="tagGetAndPostParameterUnserializer"
        class="org.opens.urlmanager.rest.unserializer.entity.tag.TagGetAndPostParameterUnserializer"
    />
           
    <bean
        id="tagUnserializers"
        class="java.util.ArrayList"
    >
        <constructor-arg>
            <list>
                <ref bean="tagGetAndPostParameterUnserializer"/>
                <ref bean="tagXMLPostUnserializer"/>
            </list>
        </constructor-arg>
    </bean>

</beans>